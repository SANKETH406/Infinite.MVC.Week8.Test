@model List<Infinite.MVC.Week8.Test.Models.Product>
@{
    ViewBag.Title = "Index";
}

<h2>List Of Vegitables and Fruits</h2>
@Html.ActionLink("Add New Item", "Create", "Products", null, new { @class = "btn btn-info" })
<hr />
<div class="row">
    <div class="col-md-4">
        <table class="table table-hover table-bordered">
            <tr>
                <th>Product Id</th>
                <th>Product Name</th>
                <th>Category</th>
                @*<th>Pack Size</th>*@
                <th>Price</th>
                <th>Qnantity</th>
                <th>Discount</th>
                <th>Total Price</th>
            </tr>
            @foreach (var p in Model)
            {
                <tr>
                    <td>@p.Id</td>
                    <td>@p.ProductName</td>
                    <td>@p.Category</td>
                    @*<td>@p.Packsize</td>*@
                    <td>@p.Price</td>
                    <td>@p.Quantity</td>
                    <td>@p.Discount</td>
                    <td>@p.TotalPrice</td>
                </tr>
            }
        </table>
    </div>
</div>