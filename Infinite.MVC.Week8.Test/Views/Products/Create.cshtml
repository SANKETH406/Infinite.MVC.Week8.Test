@using Infinite.MVC.Week8.Test.Models
@model Product

@{
    ViewBag.Title = "Create";
}
<br />
<h2>Create New Product</h2>
<hr />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    @*@Html.ValidationSummary()*@
    <div class="mb-2">
        @Html.LabelFor(p => p.ProductName, new { @class = "form-label" })
        @Html.TextBoxFor(p => p.ProductName, new { @class = "form-control" })
        @Html.ValidationMessageFor(p => p.ProductName)
    </div>
    <div class="mb-2">
        @Html.LabelFor(p => p.Category, new { @class = "form-label" })
        @Html.DropDownListFor(p => p.CategoryId, new SelectList(ViewBag.categories, "Id", "CategoryName"), "--Select--", new { @class = "form-select" })         
        @Html.ValidationMessageFor(p => p.CategoryId)
    </div>
    <div class="mb-2">
        @Html.LabelFor(p => p.Packsize, new { @class = "form-label" })
        @Html.DropDownListFor(p => p.PacksizeId, new SelectList(ViewBag.Packsize, "Id", "Packsize"), "--Select--", new { @class = "form-select" })
        @Html.ValidationMessageFor( p => p.PacksizeId)
    </div>
    <div class="mb-2">
        @Html.LabelFor(p => p.Price, new { @class = "form-label" })
        @Html.TextBoxFor(p => p.Price, new { @class = "form-control" })
        @Html.ValidationMessageFor(p => p.Price)
    </div>
    <div class="mb-2">
        @Html.LabelFor(p => p.Quantity, new { @class = "form-label" })
        @Html.TextBoxFor(p => p.Quantity, new { @class = "form-control" })
        @Html.ValidationMessageFor(p => p.Quantity)
    </div>
    <div class="mb-2">
        @Html.LabelFor(p => p.Discount, new { @class = "form-label" })
        @Html.TextBoxFor(p => p.Discount, new { @class = "form-control" })
        @Html.ValidationMessageFor(p => p.Discount)
    </div>
    <div class="mb-2">
        @Html.LabelFor(p => p.TotalPrice, new { @class = "form-label" })
        @Html.TextBoxFor(p => p.TotalPrice, new { @class = "form-control" })
        @Html.ValidationMessageFor(p => p.TotalPrice)
    </div>

    <div class="mt-2">
        <input type="submit" id="btnSubmit" class="btn btn-primary" value="Submit" />
    </div>
}